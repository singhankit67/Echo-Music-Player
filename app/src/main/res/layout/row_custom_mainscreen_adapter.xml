<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
android:id="@+id/contentRow">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="80dp"
    android:background="#ffffff">


    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_centerVertical="true">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="#212121"
        android:textSize = "17sp"
        android:textStyle="bold|italic"
        android:text="Stairway to Heaven"
        android:paddingRight="9dp"
        android:paddingBottom="-7dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/trackTitle"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="#bdbdbd"
        android:paddingRight="7dp"
        android:text="The Smithies"
        android:layout_below="@+id/trackTitle"
        android:layout_marginLeft="20dp"
        android:id="@+id/trackArtist"
        android:textStyle="bold|italic"/>
    </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="0.2dp"
              android:background="#e0e0e0"
              android:layout_marginLeft="11dp"
              android:layout_marginRight="11dp"
              android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"/>
    </RelativeLayout>

</RelativeLayout>